           label="PETRAS Report Tool.NET"
           keytip="Z"
           insertAfterMso="TabHome"
           visible="true">

        <group id="rxReport.Group"
               label="Reports"
               visible="true">

          <button id="rxbtnAbout"
                  label="About"
                  screentip="About PETRAS Report Tool.NET"
